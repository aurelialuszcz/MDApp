<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-feature android:name="android.hardware.camera.any"/>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        tools:targetApi="31">
        <activity
            android:name=".HummusRecipe"
            android:exported="false"
            android:label="@string/title_activity_hummus_recipe"
            android:theme="@style/Theme.AssignmentMain" />
        <activity
            android:name=".PastaRecipe"
            android:exported="false"
            android:label="@string/title_activity_pasta_recipe"
            android:theme="@style/Theme.AssignmentMain" />
        <activity
            android:name=".PizzaRecipe"
            android:exported="false"
            android:label="@string/title_activity_pizza_recipe"
            android:theme="@style/Theme.AssignmentMain" />
        <activity
            android:name=".BurgerRecipe"
            android:exported="false"
            android:label="@string/title_activity_burger_recipe"
            android:theme="@style/Theme.AssignmentMain" />
        <activity
            android:name=".ExistingRecipes"
            android:exported="false"
            android:label="@string/title_activity_fourth_window"
            android:theme="@style/Theme.AssignmentMain" />
        <activity
            android:name=".AccessResources"
            android:exported="false"
            android:label="@string/title_activity_third_window"
            android:theme="@style/Theme.AssignmentMain" />
        <activity
            android:name=".UploadRecipe"
            android:exported="false"
            android:label="@string/title_activity_second_window"
            android:theme="@style/Theme.AssignmentMain" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.AssignmentMain">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>